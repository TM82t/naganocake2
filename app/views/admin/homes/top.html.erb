<p>注文履歴一覧</p>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
    </tr>
  </thead>

  <tbody>
  <% @order_details.each do |f| %>
   <tr>
    <td>
      <%= link_to order_detail(f.id) do %>
       <%= f.datetime %>
      <% end %>
    </td>
    <td>
      <%= f.last_name + f.first_name %>
    </td>
    <td>
      <%= f.amount %>
    </td>
   </tr>
  <% end %>
  </tbody>
</table>